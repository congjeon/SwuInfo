<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="app.swuinfo.guru.com.swuinfo.ShuttleFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnShuttle1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1번 버스 출발합니다~"/>


            <Button
                android:id="@+id/btnShuttle2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2번 버스 출발합니다~" />

            <Button
                android:id="@+id/btnShuttle3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3번 버스 출발합니다~" />

            <Button
                android:id="@+id/btnShuttle4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4번 버스 출발합니다~" />

            <Button
                android:id="@+id/btnShuttle5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5번 버스 출발합니다~" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar222"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:visibility="invisible" />
    </FrameLayout>

</LinearLayout>
